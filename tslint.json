{
    "extends": [
      "tslint-eslint-rules",
      "tslint-react"
    ],
    "defaultSeverity":"warning",
    "rules": {
      // Built-in rules
      "adjacent-overload-signatures": true,
      "align": [
        true,
        "parameters",
        "statements"
      ],
      "array-type": [
        true,
        "array"
      ],
      "arrow-parens": false,
      "ban": false,
      "class-name": true,
      "comment-format": [
        true,
        "check-space"
      ],
      "curly": true,
      "cyclomatic-complexity": [
        false
      ],
      "eofline": true,
      "forin": false,
      "indent": [
        true,
        "spaces"
      ],
      "jsdoc-format": true,
      "label-position": true,
      "linebreak-style": [
        true,
        "LF"
      ],
      "max-classes-per-file": [
        false,
        1
      ],
      "max-line-length": [
        true,
        180
      ],
      "member-access": false,
      "member-ordering": [
        true,
        "static-before-instance"
      ],
      "new-parens": true,
      "no-angle-bracket-type-assertion": true,
      "no-any": false,
      "no-arg": true,
      "no-bitwise": true,
      "no-conditional-assignment": true,
      "no-consecutive-blank-lines": [
        true
      ],
      "no-console": [
        false
      ],
      "no-construct": true,
      "no-debugger": true,
      "no-default-export": true,
      "no-duplicate-variable": true,
      "no-empty": true,
      "no-eval": true,
      "no-inferrable-types": [
        false
      ],
      "no-internal-module": true,
      "no-require-imports": false,
      "no-shadowed-variable": true,
      "no-string-literal": false,
      "no-switch-case-fall-through": true,
      "no-trailing-whitespace": true,
      "no-reference": true,
      "no-unsafe-finally": true,
      "no-unused-expression": true,
      "no-unused-variable": [
        true,
        "react",
        "check-parameters",
        {
          "ignore-pattern": "^_"
        }
      ],
      "no-use-before-declare": true,
      "no-var-keyword": true,
      "no-var-requires": false,
      "object-literal-key-quotes": [
        true,
        "as-needed"
      ],
      "object-literal-shorthand": false,
      "object-literal-sort-keys": false,
      "one-line": [
        true,
        "check-open-brace",
        "check-whitespace"
      ],
      "one-variable-per-declaration": [
        true
      ],
      "only-arrow-functions": [
        false,
        "allow-declarations"
      ],
      "ordered-imports": [
        true,
        {
          "import-sources-order": "case-insensitive",
          "named-imports-order": "case-insensitive"
        }
      ],
      "prefer-for-of": true,
      "quotemark": [
        true,
        "double",
        "jsx-double",
        "avoid-escape"
      ],
      "radix": true,
      "semicolon": [
        true,
        "always",
        "ignore-bound-class-methods"
      ],
      "switch-default": false,
      "trailing-comma": [
        true,
        {
          "multiline": "never",
          "singleline": "never"
        }
      ],
      "triple-equals": true,
      "typedef": [
        true,
        "property-declaration"
      ],
      "typedef-whitespace": [
        true,
        {
          "call-signature": "nospace",
          "index-signature": "nospace",
          "parameter": "nospace",
          "property-declaration": "nospace",
          "variable-declaration": "nospace"
        },
        {
          "call-signature": "space",
          "index-signature": "space",
          "parameter": "space",
          "property-declaration": "space",
          "variable-declaration": "space"
        }
      ],
      "variable-name": [
        true,
        "check-format",
        "allow-pascal-case",
        "allow-leading-underscore",
        "ban-keywords"
      ],
      "whitespace": [
        true,
        "check-branch",
        "check-decl",
        "check-operator",
        "check-module",
        "check-separator",
        "check-type"
      ],
      // Rules provided by tslint-eslint-rules
      "array-bracket-spacing": [
        true,
        "never"
      ],
      "block-spacing": [
        true,
        "always"
      ],
      "brace-style": [
        true,
        "1tbs",
        {
          "allowSingleLine": true
        }
      ],
      "no-multi-spaces": [
        true,
        {
          "exceptions": {
            "PropertyAssignment": false
          }
        }
      ],
      "object-curly-spacing": [
        true,
        "always"
      ],
      // Override rules provided by tslint-react
      "jsx-alignment": false,
      "jsx-wrap-multiline": false,
      "jsx-no-multiline-js": false,
      "jsx-no-lambda": true,
      "jsx-curly-spacing": [
        false,
        "always"
      ]
    }
  }
